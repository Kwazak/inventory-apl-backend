{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/config/*.js",
    "!src/migrations/*.js",
    "!src/seeders/*.js",
    "!src/__tests__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testMatch": [
    "**/__tests__/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/coverage/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.js"],
  "verbose": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "testTimeout": 10000
}
